<h2>Регистрация</h2>
<div class="form" align="center">
<%= form_with model: @admin, url: admins_sign_up_path do |form| %>
  <div class="form-group scale_form">
    <div class="col-sm-4">
		<%= form.text_field :email, class: "form-control", placeholder: "Введите email" %>
    </div>
  </div>
  <div class="form-group scale_form">
    <div class="col-sm-4">
		<%= form.password_field :password, class: "form-control", placeholder: "Введите пароль" %>
    </div>
  </div>
  <div class="form-group scale_form">
    <div class="col-sm-4">
		<%= form.password_field :password_confirmation, class: "form-control", placeholder: "Повторите пароль" %>
    </div>
  </div>
   <div class="form-group scale_form">
    <div class="col-sm-offset-4 col-sm-4">
      <br><button type="submit" class="btn btn-lg btn-success">Подтвердить</button>
    </div>
  </div>
<% end %>
	<div class="sign_in_helper">
			<p>Есть аккаунт?  <a href="/sign_in">Давайте войдем!</a></p>
	</div>
</div>
