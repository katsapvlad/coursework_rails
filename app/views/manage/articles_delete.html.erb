<h2>Удаление статьи</h2>
<p align="center">Введите id удаляемой статьи</p>
<form action="/manage/articles_delete" method="POST">
<div class="form" align="center">
  <div class="form-group scale_form">
    <div class="col-sm-3">
    <input name="destroy_id" type="text" class="form-control" placeholder="Введите id">
    </div>
  </div>
   <div class="form-group scale_form">
    <div class="col-sm-offset-4 col-sm-4">
      <%= button_to "Удалить", url: articles_path, method: :destroy %>
    </div>
  </div>
</div>
</form>