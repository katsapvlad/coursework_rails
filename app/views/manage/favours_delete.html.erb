<h2>Удаление услуги</h2>
<p align="center">Введите id удаляемой услуги</p>
<form action="/manage/favours_delete" method="POST">
<div class="form" align="center">
  <div class="form-group scale_form">
    <div class="col-sm-3">
    <input name="destroy_id" type="text" class="form-control" placeholder="Введите id">
    </div>
  </div>
   <div class="form-group scale_form">
    <div class="col-sm-offset-4 col-sm-4">
     <%= button_to "Удалить", url: favours_path, method: :destroy %>
    </div>
  </div>
</div>
</form>