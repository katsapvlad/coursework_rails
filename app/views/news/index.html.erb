<h2>Новости</h2>

<div class="container">
	<% @news.each do |news|%>
  <div class="row">
    <div class="col-sm">
        <a href="/news/<%= news.id %>"><img src="<%= news.image_link %>" width="200" height="200" alt="упс..." class="scale_form"></a>
        <br><br><h3><%= news.title %></h3>
        <small><%= news.created_at %></small><br>
        <small>by <%= Admin.find(news.admin_id).email %></small>
  </div>
</div>
<% end %>
</div>
